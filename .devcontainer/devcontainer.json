{
  "name": "Angular Dev Container",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "postCreateCommand": "npm install -g @angular/cli",
  "forwardPorts": [4200],
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "angular.ng-template",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
